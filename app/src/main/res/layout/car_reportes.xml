<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp"
    android:layout_margin="6dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_nombre_dispo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="motorola Moto G (5S)"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="@color/colorGris"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Reporte 2018-05-3"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/colorGris"
            android:orientation="horizontal"
            />

        <ImageView
            android:id="@+id/image_reporte"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            app:srcCompat="@drawable/logo" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/colorGris"
            android:orientation="horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/eliminar_reporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/ic_action_name" />



            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/zoom" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/descargar" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
